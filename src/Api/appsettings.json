{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=ScrapDb;User=scrapuser;Password=scrappassword;CharSet=utf8mb4;AllowUserVariables=True;AllowLoadLocalInfile=True;"
  },
  "AdminApi": {
    "BaseUrl": "http://localhost:5001",
    "LogsEndpoint": "/api/admin/logs",
    "AuditLogsEndpoint": "/api/admin/audit-logs"
  },
  "Cache": {
    "Server": "localhost",
    "Port": 11211,
    "Enabled": true
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!",
    "Issuer": "GesFerApi",
    "Audience": "GesFerClient",
    "ExpirationMinutes": 60
  },
  "AdminJwtSettings": {
    "_comment": "La configuración JWT administrativa utiliza las mismas claves que JwtSettings, pero con claim role: Admin",
    "_note": "Los tokens administrativos se generan con el claim 'role: Admin' requerido por la política de autorización AdminOnly"
  },
  "Database": {
    "AutoRunMigrations": false
  }
}


